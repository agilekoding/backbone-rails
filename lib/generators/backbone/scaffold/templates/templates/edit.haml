%h1 Edit <%= singular_table_name %>

%form#edit-<%= singular_table_name %>{:name => "<%= singular_table_name %>"}

<% attributes.each do |attribute| -%>
  .field
    %label{:for => "<%= attribute.name %>"} <%= attribute.name %>:
    = text_field_tag "<%= attribute.name %>", "<%%= <%= attribute.name %> %>".html_safe
<% end -%>

  .actions
    %input{:type => "submit", :value => "Update <%= human_name %>"}

= link_to "Back", "#/index"
